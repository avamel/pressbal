!!!
%html
  %head
    %title Pressbal
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    %header
      .main.top-panel
        .container
          = render partial: 'layouts/menu_top'
      .main.down-panel
        .container
          = render partial: 'layouts/menu_bottom'
    .main.content
      .container
        #wrapper
          = yield
    %footer
      .main.bottom-panel
        .container
          = render partial: 'layouts/footer'
