.home-left
  - if @home.present?
    = raw @home.content
.home-right.clearfix
  - if @tour.present?
    .active-left
      = link_to image_tag(@tour.tour_images.general.image.url(:big)), tour_path(@tour), title: "Фото | #{@tour.title}"
    .active-right
      %h2=link_to @tour.title, tour_path(@tour), title: "#{@tour.title}"
      %p= @tour.preview
      %span
        от #{number_to_currency(@tour.price, precision: 0)}
