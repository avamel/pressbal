= form_for [@tour, @order] do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :phone_field
    = f.phone_field :phone
  .field
    = f.label :email_field
    = f.email_field :email
  .field
    = f.label :notation
    = f.text_area :notation
  .actions
    = f.submit 'Save'