= simple_form_for [@tour, @order] do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= 'При заполнении формы возникли ошибки!'
  .form-inputs
    = f.input :name, placeholder: 'Ваше имя', label: 'Ваше имя:'
    = f.input :phone, placeholder: '+375 29 203 55 93',label: 'Ваш номер телефон:'
    = f.input :email, placeholder: 'Email', label: 'Email'
    = f.input :notation, as: :text, placeholder: 'дата тура и любая другая информация', label: 'Примечание:'
  .actions
    = f.button :submit, value: 'Заказать тур', class: 'order-button'




