.left.static-page-left
  .static-content
    - if @tours.present?
      %h1 Наши предложения
      - @tours.each do |tour|
        .all-tour.clearfix
          =link_to image_tag(tour.tour_images.general.image.url(:medium)), tour_path(tour), title: "Фото | #{tour.title}"
          .all-tour-info
            %h2= link_to tour.title, tour_path(tour), title: "#{tour.title}"
            %span
              Цена от #{number_to_currency(tour.price, precision:0)}
.right.static-page-right
  = render partial: 'layouts/tour_type'
  = render partial: 'layouts/news'